pluginManagement {
    repositories {
	      mavenCentral()
        gradlePluginPortal()
        maven {
            name = 'MinecraftForge'
            url = 'https://maven.minecraftforge.net/'
        }
    }
}

plugins {
    id 'org.gradle.toolchains.foojay-resolver-convention' version '0.10.0'
}

rootProject.name = "{{ project_name }}"

{%- if include_evermod %}
include("EverMod")
{%- endif %}
{%- if workspace %}
{%- for inc in includes %}
{{ inc }}
{%- endfor %}
{%- endif %}